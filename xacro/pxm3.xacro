<?xml version="1.0" ?>
<robot name="pxm3"  xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- ****************************************************** Phantom X MKIII Robot ****************************************************  -->
<!-- Muthanna Alwahash                                                                                                                  -->
<!-- March 2022                                                                                                                         -->
<!-- *********************************************************************************************************************************  -->

<!-- ****************************************************** Parameters ***************************************************************  -->
  
  <xacro:property name="connect_offset"     value="0.02633" />
  <xacro:property name="thigh_offset_y"     value="-0.0645" />
  <xacro:property name="thigh_offset_z"     value="-0.0145" />

  <xacro:property name="joint_lower_limit"  value="-2.6179939"/>
  <xacro:property name="joint_upper_limit"  value="2.6179939"/>
  <xacro:property name="joint_effort"       value="2.8"/>
  <xacro:property name="joint_velocity"     value="5.6548668"/>

<!-- ****************************************************** Colors *******************************************************************  -->

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>


<!-- ****************************************************** Main Macro ***************************************************************  -->

  <xacro:macro name="pxm3" params="parent *origin">

<!-- ****************************************************** Attachment Joint *********************************************************  -->

        <joint name="j_pxm3_attachment" type="fixed">
          <parent link="${parent}"/>
          <child link="MP_BODY"/>
          <xacro:insert_block name="origin" />
        </joint>

<!-- ****************************************************** MP_Body Link *************************************************************  -->

        <link name="MP_BODY">

          <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.97559947"/>
            <inertia ixx="3.1081800"  ixy="-0.25460189"  ixz="2.0318174" iyy="6.3787776" iyz="0.16417863" izz="5.3316425" />
          </inertial>

          <visual>
            <!--origin xyz="-0.0235 0 -0.03525" rpy="0 0 0" /-->
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <!--box size="0.102 0.109 0.106" /-->
              <mesh filename="package://robot_gazebo/meshes/pxm3/body.STL"  scale="1 1 1"/>
            </geometry>
            <material name="blue"/>
          </visual>

          <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
              <mesh filename="package://robot_gazebo/meshes/pxm3/body_coll.STL"  scale="1 1 1"/>
            </geometry>
          </collision>
          
        </link>

<!-- ****************************************************** Create Legs using Legs Macro **********************************************  -->

      <xacro:legs xyz="0.1248    -0.06164  0.001116" rpy="0 4.7123 0.7853981633974483"   suffix="RF"/> <!-- Right Front  -->
      <xacro:legs xyz="0         -0.1034   0.001116" rpy="0 4.7123 0"                    suffix="RM"/> <!-- Right Middle -->
      <xacro:legs xyz="-0.1248   -0.06164  0.001116" rpy="0 4.7123 -0.7853981633974483"  suffix="RR"/> <!-- Right Rear   -->
      <xacro:legs xyz="0.1248    0.06164   0.001116" rpy="0 4.7123 2.356194490192345"    suffix="LF"/> <!-- Left Front   -->
      <xacro:legs xyz="0         0.1034    0.001116" rpy="0 4.7123 3.14159"              suffix="LM"/> <!-- Left Middle  -->
      <xacro:legs xyz="-0.1248   0.06164   0.001116" rpy="0 4.7123 3.9269908169872414"   suffix="LR"/> <!-- Left Rear    -->

<!-- ****************************************************** End of Main Macro ********************************************************  -->

  </xacro:macro>

<!-- ****************************************************** Legs Macro ***************************************************************  -->

  <xacro:macro name="legs" params="xyz rpy suffix">

<!-- ****************************************************** C1 Link ******************************************************************  -->

    <link name="c1_${suffix}">

      <inertial>
        <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
        <mass value="0.024357719"/>
        <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
      </inertial>

      <visual>
        <origin xyz="0 -0.0252 0" rpy="0 0 0"  />
        <geometry>
          <!--box size="0.045 0.022 0.0325" /-->
          <mesh filename="package://robot_gazebo/meshes/pxm3/connect.STL"  scale="1 1 1"/>
        </geometry>
        <material name="red"/>
      </visual>

      <collision>
        <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
        <geometry>
          <mesh filename="package://robot_gazebo/meshes/pxm3/connect_coll.STL"  scale="1 1 1"/>
        </geometry>
      </collision>

    </link>

<!-- ****************************************************** C2 Link ******************************************************************  -->

    <link name="c2_${suffix}">

      <inertial>
        <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
        <mass value="0.024357719"/>
        <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
      </inertial>

      <visual>
        <origin xyz="0 -0.0252 0" rpy="0 0 0"  />
        <geometry>
          <!--box size="0.045 0.022 0.0325" /-->
          <mesh filename="package://robot_gazebo/meshes/pxm3/connect.STL"  scale="1 1 1"/>
        </geometry>
        <material name="green"/>
      </visual>

      <collision>
        <origin xyz="0 -${connect_offset} 0" rpy="0 0 0"  />
        <geometry>
          <mesh filename="package://robot_gazebo/meshes/pxm3/connect_coll.STL"  scale="1 1 1"/>
        </geometry>
      </collision>

    </link>

<!-- ****************************************************** Thigh Link ***************************************************************  -->

    <link name="thigh_${suffix}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <mass value="0.024357719"/>
        <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <geometry>
          <!--box size="0.045 0.022 0.0325" /-->
          <mesh filename="package://robot_gazebo/meshes/pxm3/thigh_l.STL"  scale="1 1 1"/>
        </geometry>
        <material name="red"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <geometry>
          <mesh filename="package://robot_gazebo/meshes/pxm3/thigh_l_coll.STL"  scale="1 1 1"/>
        </geometry>
      </collision>

    </link>

<!-- ****************************************************** Tibia Link ***************************************************************  -->

    <link name="tibia_${suffix}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <mass value="0.024357719"/>
        <inertia ixx="0.0051411124"  ixy="-0.00057530255"  ixz="-0.000024729049" iyy="0.0081915737" iyz="-0.000019223094" izz="0.0011379812" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <geometry>
          <!--box size="0.045 0.022 0.0325" /-->
          <mesh filename="package://robot_gazebo/meshes/pxm3/tibia_l.STL"  scale="1 1 1"/>
        </geometry>
        <material name="green"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"  />
        <geometry>
          <mesh filename="package://robot_gazebo/meshes/pxm3/tibia_l_coll.STL"  scale="1 1 1"/>
        </geometry>
      </collision>

    </link>

<!-- ****************************************************** C1 Joint *****************************************************************  -->

    <joint name="j_c1_${suffix}" type="revolute">
      <parent link="MP_BODY"/>
      <child link="c1_${suffix}"/>
      <origin xyz="${xyz}" rpy="${rpy}" />
      <axis xyz="1 0 0" />
      <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
    </joint>

<!-- ****************************************************** C2 Joint *****************************************************************  -->

    <joint name="j_c2_${suffix}" type="fixed">
      <parent link="c1_${suffix}"/>
      <child link="c2_${suffix}"/>
      <origin xyz="0 -0.054 0" rpy="0 1.5704 3.14159" />
    </joint>

<!-- ****************************************************** Thigh Joint **************************************************************  -->

    <joint name="j_thigh_${suffix}" type="revolute">
      <parent link="c2_${suffix}"/>
      <child link="thigh_${suffix}"/>
      <origin xyz="0 0 0" rpy=" 0 3.14159 3.14159" />
      <axis xyz="1 0 0" />
      <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
    </joint>

<!-- ****************************************************** Tibia Joint **************************************************************  -->

    <joint name="j_tibia_${suffix}" type="revolute">
      <parent link="thigh_${suffix}"/>
      <child link="tibia_${suffix}"/>
      <origin xyz="0 ${thigh_offset_y} ${thigh_offset_z}" rpy="-1.5707 0 3.14159" />
      <axis xyz="1 0 0" />
      <limit lower="${joint_lower_limit}" upper="${joint_upper_limit}" effort="${joint_effort}" velocity="${joint_velocity}"/>
    </joint>

<!-- ****************************************************** C1 Transmission **********************************************************  -->

    <transmission name="t_c1_${suffix}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="j_c1_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>    
      </joint>
      <actuator name="m_c1_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

<!-- ****************************************************** Thigh Transmission *******************************************************  -->

    <transmission name="t_thigh_${suffix}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="j_thigh_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>    
      </joint>
      <actuator name="m_thigh_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

<!-- ****************************************************** Tibia Transmission *******************************************************  -->

    <transmission name="t_tibia_${suffix}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="j_tibia_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="m_tibia_${suffix}">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

<!-- ****************************************************** end of Macro *************************************************************  -->
   
  </xacro:macro>

<!-- ****************************************************** Base link ****************************************************************  -->

  <link name="base_link"/>

<!-- ****************************************************** Main Macro ***************************************************************  -->

  <xacro:pxm3 parent="base_link">
      <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:pxm3>

<!-- *********************************************************************************************************************************  -->


</robot>
