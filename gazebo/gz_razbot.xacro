<?xml version="1.0" encoding="UTF-8" ?>

<robot name="razbot" xmlns:xacro="http://ros.org/wiki/xacro">

<!-- ****************************************************** Razbot Robot *************************************************************  -->
<!-- Muthanna Alwahash                                                                                                                  -->
<!-- March 2022                                                                                                                         -->
<!-- Originally developed by Shubhankar Das a.k.a Razbotics                                                                             -->
<!-- *********************************************************************************************************************************  -->

<!-- ****************************************************** Base Link ****************************************************************  -->

    <gazebo reference="base_link"> 
        <material>Gazebo/Blue</material> 
    </gazebo> 

<!-- ****************************************************** Leg Macro ****************************************************************  -->
	
	<xacro:macro name="leg_gz" params="side position">

<!-- ****************************************************** Coxa Link *****************************************************************  -->

        <gazebo reference="coxa_${side}${position}"> 
            <material>Gazebo/Red</material> 
        </gazebo> 

<!-- ****************************************************** Femur Link ***************************************************************  -->

        <gazebo reference="femur_${side}${position}"> 
            <material>Gazebo/Green</material> 
        </gazebo> 

<!-- ****************************************************** Tibia Link **************************************************************  -->

        <gazebo reference="tibia_${side}${position}"> 
            <material>Gazebo/Red</material> 
        </gazebo> 

<!-- ****************************************************** end of Macro *************************************************************  -->

	</xacro:macro>
    
<!-- ****************************************************** Build Robot **************************************************************  -->

	<xacro:leg side="R" position="R" />
	<xacro:leg side="R" position="M" />
	<xacro:leg side="R" position="F" />
	<xacro:leg side="L" position="R" />
	<xacro:leg side="L" position="M" />
	<xacro:leg side="L" position="F" />

<!-- ******************************************************  *************************************************************************  -->

</robot>
